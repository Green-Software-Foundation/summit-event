---
import { Icon } from "astro-icon/components";
---

<div
  class="bg-subscribe-card-color p-12 rounded-xl lg:w-9/12 m-auto text-center"
>
  <h1 class="text-white font-bold text-3xl text-center">
    <span class="text-secondary-default">Subscribe</span> to the GSF Newsletter
  </h1>
  <div id="mc_embed_signup" class="form-wrapper">
    <form
      action="https://foundation.us5.list-manage.com/subscribe/post?u=ddc99c7db248c3df0ef4f7d24&id=c5376a805c&f_id=003e64e9f0"
      method="post"
      id="mc-embedded-subscribe-form"
      name="mc-embedded-subscribe-form"
      class="validate"
      target="_blank"
    >
      <div id="mc_embed_signup_scroll" class="form-content">
        <div class="mc-field-group">
          <input
            type="email"
            value=""
            name="EMAIL"
            id="mce-EMAIL"
            placeholder="example@domain.com"
            required
            class="required email opacity-70 rounded-lg p-3 text-white bg-subscribe-input-color flex mx-auto mt-6 max-w-full w-96 mb-2"
          />
          <span id="mce-EMAIL-HELPERTEXT" class="helper_text"></span>
        </div>
        <div hidden=""><input type="hidden" name="tags" value="4283512" /></div>
        <div class="mc-field-group input-group">
          <div id="mce-responses" style="width:100%" class="clear">
            <div class="response" id="mce-error-response" style="display:none">
            </div>
            <div
              class="response"
              id="mce-success-response"
              style="display:none"
            >
            </div>
          </div>
          <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
          <div style="position: absolute; left: -5000px;" aria-hidden="true">
            <input
              type="text"
              name="b_ddc99c7db248c3df0ef4f7d24_82bc8f6e5c"
              tabindex="-1"
              value=""
            />
          </div>
          <div class="clear">
            <input
              type="submit"
              value="Sign up"
              name="subscribe"
              id="mc-embedded-subscribe"
              class="bg-secondary-default text-gray-darkest text-sm font-bold rounded-lg flex mx-auto mt-6 py-3.5 px-8 hover:bg-btn-hover transition-colors"
            />
          </div>
        </div>
      </div>
    </form>
  </div>
  <script
    type="text/javascript"
    src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"
  ></script><script type="text/javascript">
    (function ($) {
      window.fnames = new Array();
      window.ftypes = new Array();
      fnames[0] = "EMAIL";
      ftypes[0] = "email";
      fnames[1] = "FNAME";
      ftypes[1] = "text";
      fnames[2] = "LNAME";
      ftypes[2] = "text";
      fnames[3] = "ADDRESS";
      ftypes[3] = "address";
      fnames[4] = "PHONE";
      ftypes[4] = "phone";
    })(jQuery);
    var $mcj = jQuery.noConflict(true);
  </script>
  <!--End mc_embed_signup-->
</div>
<style>
  :global(.mc-field-group) {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 24rem;
    margin: 0 auto;
  }
  :global(#mc_embed_signup div.mce_inline_error) {
    background-color: #c62323;
    width: 100%;
  }
  #mce-success-response {
    background: #aecc53;
    color: #0b0b0b;
    font-weight: 800;
    padding: 16px 0;
    margin-top: 1rem;
  }
</style>
